<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MaskedBehaviorReproducible.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Try writing 1 200 000 without spaces in the field below. Last quote gets omitted."/>

            <Entry>
                <Entry.Behaviors>
                    <toolkit:MaskedBehavior Mask="000° 00&apos; 00&quot;" UnmaskedCharacter="0"/>
                </Entry.Behaviors>
            </Entry>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
